# AWS Amplify Configuration
# Copy this file to .env and replace with actual values from SAM deployment

# Cognito User Pool ID (from SAM output: UserPoolId)
VITE_USER_POOL_ID=REPLACE_WITH_USER_POOL_ID

# Cognito User Pool Client ID (from SAM output: UserPoolClientId)
VITE_USER_POOL_CLIENT_ID=REPLACE_WITH_USER_POOL_CLIENT_ID

# Cognito Hosted UI Domain (from SAM output: UserPoolDomain)
# Format: <domain-prefix>.auth.<region>.amazoncognito.com
VITE_USER_POOL_DOMAIN=REPLACE_WITH_USER_POOL_DOMAIN

# API Gateway Endpoint URL (from SAM output: ApiUrl)
VITE_API_URL=REPLACE_WITH_API_URL

# Frontend URL (from SAM output: FrontendUrl or use localhost for dev)
# For local development: http://localhost:5173
# For production: https://d123abc456xyz.cloudfront.net
VITE_FRONTEND_URL=http://localhost:5173

# AWS Region
VITE_AWS_REGION=us-east-1
